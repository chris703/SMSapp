<div class="row">
     <div class="col-md-4" > 
          <form action="/send-sms"  method ="POST" class="card card-body">

     <div class="form-group">
          <input type="tel" name="phone" class="form-control" placeholder="your number" autocomplete="off">
     </div>

     <div class="form-group">
          <input type="text" name = "message" style="height: 100px;" placeholder="write your message" class="form-control" autofocus>
     </div>

     
     <button class="btn btn-primary btn-block"> Send </button>
</form>
     </div>

     <div class="col-md-8">
         {{#if messages}}
           <ul class="list-group"  style = "height: 88vh; overflow-y: auto;" id ="messages">
               {{#each messages}}
                    <li class="list-group-item list-group-item-info list-group-item-action">
                         <p>{{Body}}</p>
                         
                         <!--<span>{{_id}}</span>-->
                         <span>{{To}}</span>
                         <span>{{From}}</span>
                         <span>{{timeago createdAt}}</span>

          </li>
               {{/each}}
           </ul>
          {{else}}
          <p>no messages yet</p>

          {{/if}}

     </div>
</div>